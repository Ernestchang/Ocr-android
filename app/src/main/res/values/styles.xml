<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppThemeTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ToolbarPopupStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="ImageButtonStyle.50">
        <item name="android:layout_width">@dimen/size_50dp</item>
        <item name="android:layout_height">@dimen/size_50dp</item>
    </style>

    <style name="ImageButtonStyle.60">
        <item name="android:layout_width">@dimen/size_60dp</item>
        <item name="android:layout_height">@dimen/size_60dp</item>
    </style>

    <style name="ClickTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">@dimen/text_min_size</item>
        <item name="android:minHeight">@dimen/text_min_size</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ToolItemsTextStyle">
        <item name="android:layout_width">@dimen/tool_size</item>
        <item name="android:layout_height">@dimen/tool_size</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_tool_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
